@model IEnumerable<appIngresoEgreso.Models.ViewModels.MiembroFamiliaInfoViewModel>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre
            </th>
            <th>
                Rol
            </th>
            <th>
                Monto Actual
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() <= 0)
        {
            <div>
                <h3>No hay familiares registrados</h3>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto)
                    </td>
                    <td>
                    </td>
                </tr>
        }
}
    </tbody>
</table>
