@model IEnumerable<appIngresoEgreso.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div>
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-danger">TempData["Mensaje"]</div>
    }
</div>
<p>
    <a asp-action="Add" class="btn btn-primary">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { idCategoria=item.IdCategoria})
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="idCategoria" value="@item.IdCategoria"/>
                    <button type="submit">Eliminar</button>
                </form>
                <br />
                    <form asp-action="Desactivar" method="post">
                        <input type="hidden" name="idCategoria" value="@item.IdCategoria" />
                        <button type="submit">Desactivar</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
